<div class="login-register-page">
<div class="form-container">
    <h1>Sign In</h1>

    <p class="account">
      No account yet? <%= link_to "Sign up!", signup_path, class: "ml-2" %>
    </p>

    <%= form_with(url: session_path, local: true) do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, required: true, class: "form-control mt-2", placeholder: "Your name" %>
      </div>

        <%= f.submit "Sign In", class: "secondary-btn mt-3" %>
    <% end %>
  </div>

</div>